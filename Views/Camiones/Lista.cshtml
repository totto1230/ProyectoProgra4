@model IEnumerable<ProyectoPrograCuatro.Models.Camiones>
@{
    ViewBag.Title = "Camiones";
}

<h2>Lista de Camiones</h2>

<p>
    @Html.ActionLink("Crear Camion", "Crear","Camiones")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unidad)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Placa)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>

        <th></th>
    </tr>
    @foreach (var item in Model.ToList())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                @if (item.Estado == 1)
                {
                    <text>Activo</text>
                }
                else
                {
                    <text>Inactivo</text>
                }
            </td>

            <td>
                @Html.ActionLink("Editar", "Actualizar","Camiones", new { codigoCamion=item.Codigo }) |
                @Html.ActionLink("Eliminar","Eliminar","Camiones",
            new { codigoCamion=item.Codigo })            
            </td>
        </tr>
    }
</table>
