@model ProyectoPrograCuatro.Models.Usuarios
@{
    Layout = null;
    ViewBag.Title = "Ingreso";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto Progra</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoPrograCuatro.styles.css" asp-append-version="true" />
</head>
<body>

    @using (Html.BeginForm("Login", "Usuarios", FormMethod.Post))
    {
        <div class="container">

            <div class="row vh-100 justify-content-center align-items-center">

                <div class="col-auto bg-light p-5">
                    <h4 class="text-center">Ingreso al Sistema</h4>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "control-label col-md-10" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Contrasenia, htmlAttributes: new { @class = "control-label col-md-10" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Contrasenia, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Contrasenia, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Ingresar" class="btn-primary" />
                            @ViewBag.Message
                        </div>
                    </div>
                </div>

            </div>
        </div>

    }

</body>
</html>
