@model ProyectoPrograCuatro.Models.Clientes

@{
    ViewBag.Title = "Confirmar Eliminación Clientes";
}

<h2>Actualizar</h2>

@using (Html.BeginForm("Eliminar", "Clientes"))
{
    <div class="form-horizontal">
        <h4>Datos del Cliente</h4>
        <hr />
        @Html.HiddenFor(model => model.Codigo)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Eliminar" class="btn-primary" />
                @ViewBag.Message
            </div>
        </div>
    </div>
}
<br />

<div>
    @Html.ActionLink("Regresar a Clientes", "Lista")
</div>
