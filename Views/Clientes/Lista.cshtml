@model IEnumerable<ProyectoPrograCuatro.Models.Clientes>
@{
    ViewBag.Title = "Clientes";
}

<h2>Lista de Clientes</h2>

<p>
    @Html.ActionLink("Crear Cliente", "Crear","Clientes")
</p>

<table class="table">
      <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contacto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>

        <th></th>
    </tr> 
  @foreach (var item in Model.ToList())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Actualizar","Clientes", new { idcliente=item.Codigo }) |
                @Html.ActionLink("Eliminar","Eliminar","Clientes",
            new { idcliente=item.Codigo },
            new { onclick = "return confirm('¿Desea eliminar el cliente: " + item.Nombre + "?')"  })
            </td>
        </tr>
    } 
</table>

